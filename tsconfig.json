{
    "compilerOptions": {
      "target": "ES5",
      "module": "ESNext",
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "declaration": true,
      "outDir": "dist",
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "strict": true,
      "noImplicitAny": false,
      "resolveJsonModule": true,
      "isolatedModules": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }